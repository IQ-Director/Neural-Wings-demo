{
    "postProcess": {
        "name": "SPH_SSF",
        "hints": "rtPool使用accuracy_前缀表示使用浮点纹理",
        "rtPool": [
            "inScreen",
            "outScreen",
            "accuracy_raw_Fluid_Depth",
            "accuracy_FluidBlur_1",
            "accuracy_FluidBlur_2",
            "accuracy_raw_Fluid_Thickness",
            "simple_Fluid"
        ],
        "depthLinks": [
            {
                "source": "inScreen",
                "targets": [
                    "raw_Fluid_Depth",
                    "raw_Fluid_Thickness",
                    "simple_Fluid"
                ]
            }
        ],
        "hint": "拓扑序",
        "postProcessGraph": [
            {
                "name": "DepthBlur",
                "vs": "assets/shaders/postprocess/default.vs",
                "fs": "assets/shaders/postprocess/bilateral_blur.fs",
                "inputs": [
                    [
                        "u_fluidDepth",
                        "raw_Fluid_Depth"
                    ]
                ],
                "output": "FluidBlur_1",
                "uniforms": {
                    "u_dir": [
                        1,
                        0
                    ]
                }
            },
            {
                "name": "New DepthBlur",
                "vs": "assets/shaders/postprocess/default.vs",
                "fs": "assets/shaders/postprocess/bilateral_blur.fs",
                "inputs": [
                    [
                        "u_fluidDepth",
                        "FluidBlur_1"
                    ]
                ],
                "output": "FluidBlur_2",
                "uniforms": {
                    "u_dir": [
                        0,
                        1
                    ]
                }
            },
            {
                "name": "Shading",
                "vs": "assets/shaders/postprocess/default.vs",
                "fs": "assets/shaders/postprocess/ssf_shading.fs",
                "inputs": [
                    [
                        "u_sceneTex",
                        "inScreen"
                    ],
                    [
                        "u_fluidDepth",
                        "FluidBlur_2"
                    ],
                    [
                        "u_thicknessTex",
                        "raw_Fluid_Thickness"
                    ],
                    [
                        "u_simpleFluid",
                        "simple_Fluid"
                    ]
                ],
                "output": "outScreen",
                "uniforms": {}
            }
        ]
    }
}